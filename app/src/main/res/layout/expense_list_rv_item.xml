<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="false"
    app:rippleColor="@color/material_on_surface_emphasis_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/expenseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/expense_title"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/expenseAmount"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Grocery Shopping" />

        <!-- Amount aligned to top end -->
        <TextView
            android:id="@+id/expenseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/material_dynamic_primary40"
            app:layout_constraintTop_toTopOf="@id/expenseTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="â‚¹1,250" />

        <!-- Category below title -->
        <TextView
            android:id="@+id/expenseCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/expenseTitle"
            app:layout_constraintEnd_toStartOf="@id/receiptIndicator"
            app:layout_constraintTop_toBottomOf="@id/expenseTitle"
            tools:text="Travel" />

        <!-- Receipt icon/indicator aligned with category -->
        <ImageView
            android:id="@+id/receiptIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:contentDescription="@string/receipt_available"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:tint="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/expenseCategory"
            app:layout_constraintBottom_toBottomOf="@id/expenseCategory"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            tools:visibility="visible" />

        <!-- Notes below category -->
        <TextView
            android:id="@+id/expenseNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@id/expenseTitle"
            app:layout_constraintEnd_toEndOf="@id/receiptIndicator"
            app:layout_constraintTop_toBottomOf="@id/expenseCategory"
            android:visibility="gone"
            tools:text="Bought groceries for the week including vegetables, fruits, and dairy products"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>